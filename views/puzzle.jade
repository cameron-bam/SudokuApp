extends layout

block content
	main
		div(class="sudoku-form" ng-controller="SudokuController as sudoku" ng-cloak)
			table(class="sudoku-board")
				tr(ng-repeat = "boxRow in [0,1,2,3,4,5,6,7,8]")
					td(ng-repeat = "boxCol in [0,1,2,3,4,5,6,7,8]" class="sudoku-region" ng-click="sudoku.board.toggleSelector(boxCol, boxRow)")
						div(class="number-picker" ng-show="sudoku.board.isSelectorActive(boxCol, boxRow)")
							div(ng-repeat = "number in ['1','2','3','4','5','6','7','8','9']" ng-class="'number value'+number" ng-click="sudoku.board.setBoxValue(boxCol, boxRow, number); sudoku.board.isBoxValueValid(boxCol, boxRow, number);") {{number}}
						div(class="value") {{sudoku.board.getBoxValue(boxCol, boxRow)}}
			button(name="boardReset") Reset
			button(name="boardSubmit") Submit



